@using DOAN.Models
@model IEnumerable<SANPHAM>


@{
    var listSP = Model.OrderByDescending(x => x.SoLanMua);
}





<!-- Start Most Popular -->
<div class="product-area most-popular section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>Hot Items</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="owl-carousel popular-slider mt-0">

                    @foreach (var item in listSP.Take(10))
                    {
                        <!-- Start Single Product -->
                        <div class="single-product">
                            <div class="product-img">
                                <a href="@Url.Action("Index","SanPham",new {id=item.IdSP})">
                                    <img class="default-img" src="@Url.Content("~/assets/client/hinhsp"+item.AnhSP)" alt="#">
                                    <img class="hover-img" src="@Url.Content("~/assets/client/hinhsp"+item.AnhSP)" alt="#">
                                    @if (item.NgayTao.Value.Month == DateTime.Now.Month)
                                    {
                                        <span class="new">New</span>
                                    }
                                    else
                                    {
                                        <span class="out-of-stock">Hot</span>
                                    }
                                </a>
                                <div class="button-head">
                                    <div class="product-action pr-1">
                                        <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class=" ti-eye"></i><span>Quick Shop</span></a>
                                    </div>
                                    <div class="product-action-2 pl-1">
                                        @Ajax.ActionLink("Add to cart", "ThemGioHangAjax", "GioHang", new { MaSP = item.IdSP, strURL = Request.Url.ToString() }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "iconGioHang", InsertionMode = InsertionMode.Replace })
                                    </div>
                                </div>
                            </div>
                            <div class="product-content">
                                <h3><a href="@Url.Action("Index","SanPham",new {id=item.IdSP})">@item.TenSP</a></h3>
                                <div class="product-price">
                                    <span class="old">@item.GiaGoc <sup>đ</sup></span>
                                    <span>tien sau khi km <sup>đ</sup></span>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Product -->

                    }


                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Most Popular Area -->






