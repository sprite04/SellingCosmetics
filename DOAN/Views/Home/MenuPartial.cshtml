@using DOAN.Models
@model IEnumerable<LOAISANPHAM>

@{ 
    List<String> listDM = new List<string>();
    listDM.AddRange(new string[] { "SKINCARE", "MAKEUP", "HAIR CARE", "BATH & BODY", "ACCESSORIES", "FRAGRANCE" });
    IEnumerable<SANPHAM> listSP = ((IEnumerable<SANPHAM>)ViewBag.listSP).OrderByDescending(x=>x.SoLanMua);
}


<!-- Header Inner -->
<div class="header-inner">
    <div class="container">
        <div class="cat-nav-head">
            <div class="row">
                <div class="col-lg-3">
                    <div class="all-category">
                        <h3 class="cat-heading"><i class="fa fa-bars" aria-hidden="true"></i>CATEGORIES</h3>
                        <ul class="main-category">

                            <li class="main-mega">
                                <a href="#">BRANDS <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                                <ul class="mega-menu">
                                    <li class="single-menu align-top">
                                        <a href="#" class="title-link mb-0">Brands</a>
                                        <div class="inner-link">
                                            @foreach (var item in listSP.GroupBy(x => x.THUONGHIEU).Skip(4))
                                            {
                                                <a href="@Url.Action("SanPhamTheoThuongHieu","SanPham",new {idTH=item.Key.IdTH})">@item.Key.TenTH.ToLower() </a>
                                            }
                                        </div>
                                    </li>
                                    <li class="single-menu">
                                        <a href="#" class="title-link">Featured Brands</a>
                                        <div class="image">
