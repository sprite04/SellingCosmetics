@using DOAN.Models;
@model NGUOIDUNG

@{
    ViewBag.Title = "ThongTinCaNhan";
    Layout = "~/Views/Shared/DetailLayout.cshtml";
}



<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container" >
        <div class="row">
            <div class="col-12">
                <div class="bread-inner">
                    <ul class="bread-list">
                        <li><a href="index1.html">Home<i class="ti-arrow-right"></i></a></li>
                        <li class="active"><a href="blog-single.html">Shop Grid</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->
<!-- Product Style -->
<section class="product-area shop-sidebar shop section">
    <div class="container" style="min-height:700px">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-12">
                <div class="shop-sidebar">
                    <!-- Single Widget -->
                    <h3 style="display:block; border-bottom:3px solid #EB395F; width:42%;  margin-bottom:10px"><small>ACCOUNT</small></h3>
                    <a href="@Url.Action("ThongTinCaNhan","Home")"><div class="hdong">Account information</div></a>
                    <a href="@Url.Action("ThongTinDonHang","Home")"><div class="bthuong"> Order management</div></a>
                    <a href="@Url.Action("ThayDoiMatKhau","Home")"><div class="bthuong"> Change the password</div></a>
                    <a href="@Url.Action("DangXuat","Home")"><div class="bthuong">Sign out</div></a>
                    <!--/ End Single Widget -->
                </div>
            </div>
            <div class="col-lg-8 col-md-7 col-12 ml-5">
                @if (ViewBag.Error == 1)
                {
                <div class="alert alert-warning">
                    <button type="button" class="close float-right" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    The execution failed.
                </div>
                }
                else if (ViewBag.Error == 2)
                {
            <div class="alert alert-warning">
                <button type="button" class="close float-right" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                Please check the information entered.
            </div>
                }
                else if (ViewBag.Error == -1)
                {
            <div class="alert alert-success">
                Successful implementation.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                }
                <div class="row">
                    <h4 style="margin-bottom:20px; margin-top:5px; border-left:5px solid #EB395F; padding:0px 3px 0px 5px"><small>ACCOUNT INFORMATION</small></h4>
                    <div class="col-12">

                        <!-- Comment Form -->
                        @using (Html.BeginForm("ThongTinCaNhan", "Home", FormMethod.Post))
                        {

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IdUser)
                            @Html.HiddenFor(model => model.IdLoaiUser)
                            @Html.HiddenFor(model => model.TT_User)

                            @Html.HiddenFor(model => model.Password)
                            @Html.HiddenFor(model => model.Password1)

                            @Html.HiddenFor(model => model.Username)
                            @Html.HiddenFor(model => model.NgayTao)
                            @Html.HiddenFor(model => model.Mail)
                            <div class="form-group row">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Full name</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.HoTen, new { @type = "text", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName" class="col-sm-2 col-form-label">Sex</label>
                                @if (ViewBag.GT)
                                {
                                    <input style="width:50px;margin-top:8px" type="radio" name="GioiTinh" value=False>
                                    <label style="margin-top: 3px">Male</label>
                                    <input style="width:50px;margin-top:8px" type="radio" name="GioiTinh" value=True checked>
                                    <label style="margin-top: 3px">Female</label>
                                }
                                else
                                {
                                    <input style="width:50px;margin-top:8px" type="radio" name="GioiTinh" value=False checked>
                                    <label style="margin-top: 3px">Male</label>
                                    <input style="width:50px;margin-top:8px" type="radio" name="GioiTinh" value=True>
                                    <label style="margin-top: 3px">Female</label>
                                }

                            </div>

                            <div class="form-group row">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Birthday</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @id = "inputBD" })
                                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.Mail, new { @type = "text", @class = "form-control", @readonly = true })
                                    @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Phone number</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@Model.SDT.Trim()" name="SDT" />
                                    @*@Html.TextBoxFor(model => model.SDT.Trim(), new { @type = "text", @class = "form-control", @id = "inputPhone" })*@
                                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Address</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.DiaChi, new { @type = "text", @class = "form-control", @id = "inputPhone" })
                                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-sm-2 col-sm-10">
                                    <button type="submit" class="btn float-right">Save</button>
                                </div>
                            </div>
                        }

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
                <!--/ End Product Style 1  -->
