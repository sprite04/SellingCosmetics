@using DOAN.Models;
@model IEnumerable<HOADON>

@{
    ViewBag.Title = "ThongTinDonHang";
    Layout = "~/Views/Shared/DetailLayout.cshtml";
}

@section script{
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
    
}


<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bread-inner">
                    <ul class="bread-list">
                        <li><a href="index1.html">Home<i class="ti-arrow-right"></i></a></li>
                        <li class="active"><a href="blog-single.html">Shop Grid</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->
<!-- Product Style -->
<section class="product-area shop-sidebar shop section">
    <div class="container" style="min-height:700px">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-12">
                <div class="shop-sidebar">
                    <!-- Single Widget -->
                    <h3 style="display:block; border-bottom:3px solid #EB395F; width:42%;  margin-bottom:10px"><small>ACCOUNT</small></h3>
                    <a href="#"><div class="bthuong"> Thông tin tài khoản</div></a>
                    <a href="#"><div class="hdong"> Quản lý đơn hàng</div></a>
                    <a href="#"><div class="bthuong"> Thay đổi mật khẩu</div></a>
                    <!--/ End Single Widget -->
                </div>
            </div>
            <div class="col-lg-8 col-md-7 col-12 ml-5">

                <div class="row">
                    <h4 style="margin-bottom:20px; margin-top:5px; border-left:5px solid #EB395F; padding:0px 3px 0px 5px"><small>ĐƠN HÀNG CỦA TÔI</small></h4>
                    <div class="col-12">

                        <table id="example1" class="table table-bordered table-hover dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.IdHD)</th>
                                    <th>@Html.DisplayNameFor(model => model.NgayDH)</th>
                                    <th>@Html.DisplayNameFor(model => model.TongTien)</th>
                                    <th>@Html.DisplayNameFor(model => model.NGUOIDUNG.HoTen)</th>
                                    <th></th>
                                    

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row1_@item.IdHD">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdHD)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NgayDH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TongTien)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("ChiTietNguoiDung","NguoiDung",new {id=item.IdKH})">
                                                @Html.DisplayFor(modelItem => item.NGUOIDUNG.HoTen)
                                            </a>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a class="btn btn-info" href="@Url.Action("ChiTiet","QLHoaDon",new { id=item.IdHD})">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<!--/ End Product Style 1  -->
