@using DOAN.Models


@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    var hoadon = ViewBag.HoaDon as HOADON;
    var listCT = ViewBag.ChiTiet as IEnumerable<CHITIETHD>;
    int tongtiensp = 0;
    int thanhtoan = 0;
}

<div class="invoice p-3 mb-3">
    <!-- title row -->
    <div class="row">
        <div class="col-12">
            <h4>
                <i class="fas fa-globe"></i> Sociolla
                <small class="float-right">Date: @hoadon.NgayDH</small>
            </h4>
        </div>
        <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            From
            <address>
                <strong>Sociolla</strong><br>
                795 Folsom Ave, Suite 600<br>
                San Francisco, CA 94107<br>
                Phone: (804) 123-5432<br>
                Email: info@almasaeedstudio.com
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            To
            <address>
                <strong>@hoadon.NGUOIDUNG.HoTen</strong><br>
                @hoadon.DiaChi<br>
                Phone: @hoadon.SDT<br>
                Email: @hoadon.NGUOIDUNG.Mail
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <b>Order ID:</b> @hoadon.IdHD<br>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <div class="row">
        <div class="col-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in listCT)
                    {
                        <tr>
                            <td>@item.SANPHAM.TenSP</td>
                            <td>@item.SoLuong</td>
                            <td>@Url.Content((item.SANPHAM.GiaGoc*item.SANPHAM.LoiNhuan).ToString())</td>
                            @{ 
                                tongtiensp +=(Int32)( item.SANPHAM.GiaGoc * item.SANPHAM.LoiNhuan * item.SoLuong);
                            }
                            <td>@Url.Content((item.SANPHAM.GiaGoc*item.SANPHAM.LoiNhuan*@item.SoLuong).ToString())</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    <div class="row">
        <!-- accepted payments column -->
        <div class="col-6">
        </div>
        <!-- /.col -->
        <div class="col-6">
            <p class="lead">Amount Due 2/22/2014</p>

            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th style="width:50%">Subtotal:</th>
                            <td>@tongtiensp</td>
                        </tr>
                        <tr>
                            <th>Save</th>
                            @if (hoadon.IdKM != null && hoadon.KHUYENMAI.LoaiKM == 1)
                            {
                                <td>@Url.Content(hoadon.KHUYENMAI.GiaTri.ToString()+"%")</td>
                            }
                            else if (hoadon.IdKM != null && hoadon.KHUYENMAI.LoaiKM == 2)
                            {
                                <td>@Url.Content(hoadon.KHUYENMAI.GiaTri.ToString() + "đ")</td>
                            }
                            else
                            {
                                <td><span>0</span></td>
                            }
                        </tr>
                        <tr>
                            <th>Shipping:</th>
                            <td>@hoadon.DTGIAOHANG.TienVanChuyen</td>
                        </tr>
                        @{ 
                            if(hoadon.IdKM!=null&& hoadon.KHUYENMAI.LoaiKM==1)
                            {
                                thanhtoan =(Int32)(tongtiensp * (1 - hoadon.KHUYENMAI.GiaTri * 1.0 / 100) + hoadon.DTGIAOHANG.TienVanChuyen);
                            }
                            else if(hoadon.IdKM != null && hoadon.KHUYENMAI.LoaiKM==2)
                            {
                                thanhtoan = (Int32)(tongtiensp  + hoadon.DTGIAOHANG.TienVanChuyen -hoadon.KHUYENMAI.GiaTri);
                            }
                            else
                            {
                                thanhtoan = (Int32)(tongtiensp + hoadon.DTGIAOHANG.TienVanChuyen);
                            }

                        }
                        <tr>
                            <th>Total:</th>
                            <td>@thanhtoan</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-12">
            <a href="invoice-print.html" target="_blank" class="btn btn-default"><i class="fas fa-print"></i> Print</a>
            <button type="button" class="btn btn-success float-right">
                <i class="far fa-credit-card"></i> Submit
                Payment
            </button>
            <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                <i class="fas fa-download"></i> Generate PDF
            </button>
        </div>
    </div>
</div>