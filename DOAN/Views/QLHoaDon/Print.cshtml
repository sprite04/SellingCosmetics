@using DOAN.Models
@{
    ViewBag.Title = "Print";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    var hoadon = ViewBag.HoaDon as HOADON;
    var listCT = ViewBag.ChiTiet as IEnumerable<CHITIETHD>;
    int tongtiensp = 0;
    int thanhtoan = 0;
    var doitacgh = ViewBag.DoiTacGH as DTGIAOHANG;
    int tienvanchuyen = 0;
    if (doitacgh != null)
    {
        tienvanchuyen = doitacgh.TienVanChuyen ?? 0;
    }
    else
    {
        tienvanchuyen = 0;
    }
}

<div class="wrapper">
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-12">
                <h2 class="page-header">
                    <i class="fas fa-globe"></i> Sociolla
                    <small class="float-right">Date: @hoadon.NgayDH</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                From
                <address>
                    <strong>Sociolla</strong><br>
                    795 Folsom Ave, Suite 600<br>
                    San Francisco, CA 94107<br>
                    Phone: (804) 123-5432<br>
                    Email: info@almasaeedstudio.com
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                To
                <address>
                    <strong>@hoadon.NGUOIDUNG.HoTen</strong><br>
                    @hoadon.DiaChi<br>
                    Phone: @hoadon.SDT<br>
                    Email: @hoadon.NGUOIDUNG.Mail
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b>Order ID:</b> @hoadon.IdHD<br>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Qty</th>
                            <th>Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in listCT)
                        {
                            <tr>
                                <td>@item.SANPHAM.TenSP</td>
                                <td>@item.SoLuong</td>
                                <td>@Url.Content((item.SANPHAM.GiaGoc * item.SANPHAM.LoiNhuan).ToString())</td>
                                @{
                                    tongtiensp += (Int32)(item.SANPHAM.GiaGoc * item.SANPHAM.LoiNhuan * item.SoLuong);
                                }
                                <td>@Url.Content((item.SANPHAM.GiaGoc * item.SANPHAM.LoiNhuan * @item.SoLuong).ToString())</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

        <div class="row">
            <!-- accepted payments column -->
            <div class="col-6">

            </div>
            <!-- /.col -->
            <div class="col-6">
                @if (hoadon.DaThanhToan == true)
                {
                    <p class="lead">Đã thanh toán</p>
                }
                else
                {
                    <p class="lead">Chưa thanh toán </p>
                }


                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th style="width:50%">Subtotal:</th>
                                <td>@tongtiensp</td>
                            </tr>
                            <tr>
                                <th>Save</th>
                                @if (hoadon.IdKM != null && hoadon.KHUYENMAI.LoaiKM == 1)
                                {
                                    <td>@Url.Content(hoadon.KHUYENMAI.GiaTri.ToString() + "%")</td>
                                }
                                else if (hoadon.IdKM != null && hoadon.KHUYENMAI.LoaiKM == 2)
                                {
                                    <td>@Url.Content(hoadon.KHUYENMAI.GiaTri.ToString() + "đ")</td>
                                }
                                else
                                {
                                    <td><span>0</span></td>
                                }
                            </tr>
                            <tr>
                                <th>Shipping:</th>
                                <td>@tienvanchuyen</td>
                            </tr>
                            @{
                                if (hoadon.IdKM != null && hoadon.KHUYENMAI.LoaiKM == 1)
                                {
                                    thanhtoan = (Int32)(tongtiensp * (1 - hoadon.KHUYENMAI.GiaTri * 1.0 / 100) + hoadon.DTGIAOHANG.TienVanChuyen);
                                }
                                else if (hoadon.IdKM != null && hoadon.KHUYENMAI.LoaiKM == 2)
                                {
                                    thanhtoan = (Int32)(tongtiensp + tienvanchuyen - hoadon.KHUYENMAI.GiaTri);
                                }
                                else
                                {
                                    thanhtoan = (Int32)(tongtiensp + tienvanchuyen);
                                }

                            }
                            <tr>
                                <th>Total:</th>
                                <td>@thanhtoan</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- ./wrapper -->

<script type="text/javascript">

    window.addEventListener("load", window.print());
</script>