@using DOAN.Models;
@model IEnumerable<SANPHAM>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-12">
            <div class="single-product">
                <div class="product-img">
                    <a href="@Url.Action("Index","SanPham",new {id=item.IdSP})">
                        <img class="default-img" src="@Url.Content("~/assets/client/hinhsp/"+item.AnhSP)" alt="#">
                        <img class="hover-img" src="@Url.Content("~/assets/client/hinhsp/"+item.AnhSP)" alt="#">
                    </a>
                    <div class="button-head">
                        <div class="product-action pr-1">
                            <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class=" ti-eye"></i><span>Quick Shop</span></a>
                        </div>
                        <div class="product-action-2 pl-1">
                            @Ajax.ActionLink("Add to cart","ThemGioHangAjax","GioHang", new { MaSP = item.IdSP, strURL = Request.Url.ToString() }, new AjaxOptions { HttpMethod="GET", UpdateTargetId= "iconGioHang", InsertionMode=InsertionMode.Replace})
                        </div>
                    </div>
                </div>
                <div class="product-content">
                    <h3><a href="@Url.Action("Index","SanPham",new {id=item.IdSP})">@item.TenSP</a></h3>
                    <div class="product-price">
                        <span style="color:#EB395F;">@item.GiaGoc <sup>đ</sup></span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
